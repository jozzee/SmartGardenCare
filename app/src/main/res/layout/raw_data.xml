<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:plainpie="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sensorError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_sensor_error"
        android:layout_marginTop="@dimen/margin_sensor_error"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:visibility="gone" />

    <az.plainpie.PieView
        android:id="@+id/pieView"
        android:layout_width="@dimen/size_pain_pie_chart"
        android:layout_height="@dimen/size_pain_pie_chart"
        android:layout_below="@id/sensorError"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_pain_pie_chart"
        plainpie:inner_pie_padding="@integer/inner_pie_padding"
        plainpie:inner_text_visibility="true"
        plainpie:percentage="75"
        plainpie:percentage_size="@integer/percentage_size_moisture" />

    <Button

        android:id="@+id/btnAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pieView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_bottom_btn_water_pain_pie_chart"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/margin_top_btn_water_pain_pie_chart"
        android:gravity="center"
        android:textSize="@dimen/text_size" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/btnAction"
        android:layout_marginLeft="@dimen/margin_line"
        android:layout_marginRight="@dimen/margin_line"
        android:background="#4D000000" />

    <TextView
        android:id="@+id/time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginBottom="@dimen/margin_bottom_details"
        android:layout_marginTop="@dimen/margin_top_details"
        android:paddingLeft="@dimen/padding_left_details"
        android:paddingRight="@dimen/padding_right_details"
        android:text="@string/lastUpdate"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/line1"
        android:layout_marginBottom="@dimen/margin_bottom_details"
        android:layout_marginTop="@dimen/margin_top_details"
        android:layout_toRightOf="@+id/time_title"
        android:gravity="right"
        android:paddingRight="@dimen/padding_right_details"
        android:textSize="@dimen/text_size" />

    <View

        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/time_title"
        android:layout_marginLeft="@dimen/margin_line"
        android:layout_marginRight="@dimen/margin_line"
        android:background="#4D000000" />

    <RelativeLayout
        android:id="@+id/layoutContainSlatStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2">

        <RelativeLayout
            android:id="@+id/layoutVisibilityStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/slatStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom_details"
                android:layout_marginTop="@dimen/margin_top_details"
                android:paddingLeft="@dimen/padding_left_details"
                android:paddingRight="@dimen/padding_right_details"
                android:text="@string/slatOpen"
                android:textSize="@dimen/text_size" />

            <View

                android:id="@+id/line2_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/slatStatus"
                android:layout_marginLeft="@dimen/margin_line"
                android:layout_marginRight="@dimen/margin_line"
                android:background="#4D000000" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/sensor1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutContainSlatStatus"
        android:layout_marginBottom="@dimen/margin_bottom_details2"
        android:layout_marginTop="@dimen/margin_top_details"
        android:paddingLeft="@dimen/padding_left_details"
        android:paddingRight="@dimen/padding_right_details"
        android:text="Sensor 1"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/sensor1_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sensor1_title"
        android:layout_below="@id/sensor1_title"
        android:layout_marginBottom="@dimen/margin_bottom_details"
        android:paddingLeft="@dimen/padding_left_details"
        android:paddingRight="@dimen/padding_right_details"
        android:text="Value"
        android:textSize="@dimen/text_size" />

    <View

        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/sensor1_value"
        android:layout_marginLeft="@dimen/margin_line"
        android:layout_marginRight="@dimen/margin_line"
        android:background="#4D000000" />

    <RelativeLayout
        android:id="@+id/layoutContainSensor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3">

        <RelativeLayout
            android:id="@+id/layoutVisibilitySensor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sensor2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom_details2"
                android:layout_marginTop="@dimen/margin_top_details"
                android:paddingLeft="@dimen/padding_left_details"
                android:paddingRight="@dimen/padding_right_details"
                android:text="Sensor 2"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/sensor2_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sensor2_title"
                android:layout_below="@id/sensor2_title"
                android:layout_marginBottom="@dimen/margin_bottom_details"
                android:paddingLeft="@dimen/padding_left_details"
                android:paddingRight="@dimen/padding_right_details"
                android:text="Value"
                android:textSize="@dimen/text_size" />

            <View

                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/sensor2_value"
                android:layout_marginLeft="@dimen/margin_line"
                android:layout_marginRight="@dimen/margin_line"
                android:background="#4D000000" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutContainSensor2"
        android:paddingBottom="@dimen/margin_bottom_details">

        <TextView
            android:id="@+id/title_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom_details"
            android:layout_marginTop="@dimen/margin_top_details"
            android:paddingLeft="@dimen/padding_left_details"
            android:paddingRight="@dimen/padding_right_details"
            android:text="Standard Value"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/value_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin_bottom_details"
            android:layout_marginRight="@dimen/padding_right_details"
            android:layout_marginTop="@dimen/margin_top_details"
            android:layout_toRightOf="@+id/title_value"
            android:gravity="right"
            android:paddingLeft="@dimen/padding_left_details"
            android:textSize="@dimen/text_size" />

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/seekBarValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/value_standard"
            android:layout_marginBottom="@dimen/margin_bottom_details"
            android:layout_marginLeft="@dimen/padding_left_details"
            android:layout_marginRight="@dimen/padding_right_details"
            android:layout_marginTop="@dimen/margin_top_details"
            app:dsb_indicatorColor="@color/blue"
            app:dsb_progressColor="@color/blue" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutContainLinChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutSeekBar">

        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_line"
            android:layout_marginRight="@dimen/margin_line"
            android:background="#4D000000" />

        <TextView
            android:id="@+id/lineChart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line5"
            android:layout_marginBottom="@dimen/margin_bottom_details"
            android:layout_marginTop="@dimen/margin_top_details"
            android:paddingLeft="@dimen/padding_left_details"
            android:paddingRight="@dimen/padding_right_details"
            android:text="@string/lineChart"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/more_raw_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line5"
            android:layout_marginBottom="@dimen/margin_bottom_details"
            android:layout_marginRight="@dimen/padding_right_details"
            android:layout_marginTop="@dimen/margin_top_details"
            android:text="@string/more"
            android:textSize="@dimen/text_size" />

        <RelativeLayout
            android:id="@+id/layoutContainLineChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineChart_title">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>