<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_layout_more"
    android:layout_marginRight="@dimen/margin_layout_more"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/padding_top_bottom_more"
        android:paddingLeft="@dimen/padding_left_right_more"
        android:paddingRight="@dimen/padding_left_right_more"
        android:paddingTop="@dimen/padding_top_bottom_more">

        <TextView
            android:id="@+id/action_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Value"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/time_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/action_more"
            android:text="timeStamp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/time_more"
            android:layout_marginTop="@dimen/padding_top_bottom_more"
            android:background="#F0F0F0" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
