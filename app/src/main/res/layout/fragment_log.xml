<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.fragment.LogFragment"
    app:theme="@style/AppThemeLog">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/containLog">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        </android.support.design.widget.CoordinatorLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exceptionLog"
        android:textSize="@dimen/text_size"
        android:layout_centerInParent="true"
        android:text="@string/exception"
        android:clickable="true"
        android:padding="@dimen/padding_exception"
        android:visibility="gone"/>
    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="@dimen/progressBar_size"
        android:layout_height="@dimen/progressBar_size"
        android:id="@+id/progressBarLog"
        android:indeterminate="false"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


</RelativeLayout>
