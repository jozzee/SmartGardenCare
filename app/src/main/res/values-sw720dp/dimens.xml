<resources>

    <!--
         Customize dimensions originally defined in res/values/dimens.xml (such as
         screen margins) for sw720dp devices (e.g. 10" tablets).
    -->
    <dimen name="activity_horizontal_margin">128dp</dimen>
    <dimen name="bar_cursor">8dp</dimen>
    <dimen name="menu_padding">-10dp</dimen>

    <!-- Default Font Style -->
    <dimen name="FontSize5S">18sp</dimen>
    <dimen name="FontSizeSSS">22sp</dimen>
    <dimen name="FontSizeSS">24sp</dimen>
    <dimen name="FontSizeS">26sp</dimen>
    <dimen name="FontSizeM">28sp</dimen>
    <dimen name="FontSizeL">30sp</dimen>
    <dimen name="FontSizeXL">32sp</dimen>
    <dimen name="FontSizeXXL">34sp</dimen>
    <dimen name="FontSizeXXXL">36sp</dimen>
    <dimen name="FontSize5XL">40sp</dimen>
    
    <!-- ListView Dimension -->
    <dimen name="PaddingSpaceSS">5dp</dimen>
    <dimen name="PaddingSpaceS">7dp</dimen>
    <dimen name="PaddingSpace">10dp</dimen>
    <dimen name="PaddingSpaceL">15dp</dimen>
    <dimen name="PaddingSpaceXL">20dp</dimen>
    <dimen name="PaddingSpaceXXL">25dp</dimen>
    <dimen name="PaddingSpace3XL">30dp</dimen>
    <dimen name="PaddingSpace4XL">35dp</dimen>
    <dimen name="MarginSpaceSS">3dp</dimen>
    <dimen name="MarginSpaceS">8dp</dimen>
    <dimen name="MarginSpace">13dp</dimen>
    <dimen name="MarginSpaceL">18dp</dimen>
    <dimen name="MarginSpaceXL">23dp</dimen>
    <dimen name="MarginSpaceXXL">28dp</dimen>
    <dimen name="WatchlistPageHeight">250dp</dimen>

    <dimen name="XCalenRing">18dp</dimen>
    <dimen name="XCalenCircle">20dp</dimen>

    <!-- dateTitleLayout -->
    <dimen name="dateTitleTextSize">@dimen/FontSizeM</dimen>
    <dimen name="dateTitlePaddingBottom">@dimen/PaddingSpaceS</dimen>
    <!-- weekLayout -->
    <dimen name="weekDaysPaddingBottom">0dp</dimen>
    <dimen name="dayOfWeekTextSize">@dimen/FontSizeS</dimen>
    <!-- weekRowLayout -->
    <dimen name="weekRowMinHeight">@dimen/PaddingSpaceXXL</dimen>
    <dimen name="dayOfMonthTextSize">@dimen/FontSizeS</dimen>
    <dimen name="dayOfMonthMinWidth">50dp</dimen>
    <dimen name="dayOfMonthMinHeight">0dp</dimen>
    <dimen name="dayOfMonthPaddingBottom">0dp</dimen>
    <dimen name="dayOfMonthImageSize">4dp</dimen>
    <dimen name="dayOfMonthImageMarginTop">@dimen/PaddingSpaceXXL</dimen>
</resources>
