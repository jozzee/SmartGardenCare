<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeMoisture" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/Blue</item>
    </style>
    <style name="AppThemeTemp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/DeepOrange</item>
    </style>
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/Yellow</item>
    </style>
    <style name="AppThemeLog" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/Grey</item>
    </style>
    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/Grey_900</item>
    </style>
    <style name="AppTheme.Button.Blue" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/Blue</item>
        <item name="android:textColor">@color/White</item>
    </style>
    <style name="AppTheme.Button.DeepOrange" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/DeepOrange</item>
        <item name="android:textColor">@color/White</item>
    </style>
    <style name="AppTheme.Button.Amber" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/Amber</item>
        <item name="android:textColor">@color/White</item>
    </style>
</resources>
